generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  email         String   @id
  username      String   @unique
  name          String
  lastname      String
  alumni        Boolean  @default(false)
  dateOfBirth   DateTime?

  attendees     Attendee[]
  postedEvents  Event[]  @relation("UserPostedEvents")
}


model Event {
  id            String   @id @default(uuid())
  posterUrl     String?  // stores Supabase Storage public URL or path
  description   String   @db.VarChar(1500)
  title         String
  date          DateTime
  affiliation   String?

  tags          String[] // Postgres text array

  attendees     Attendee[]
  creatorEmail  String
  creator       User     @relation("UserPostedEvents", fields: [creatorEmail], references: [email])
}

model Attendee {
  id        String   @id @default(uuid())

  userId    String
  eventId   String

  user      User    @relation(fields: [userId], references: [email])
  event     Event   @relation(fields: [eventId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, eventId]) // prevents duplicate registrations
}


model OneTimePassword {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@unique([email, code])
}